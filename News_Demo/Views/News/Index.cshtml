
@model IEnumerable<NewsDto>

    @{
        Layout = "_Layout";
    }


<div class="row">


    <div class="col-md-3">

        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action active">
                Categories
            </a>
            @foreach (var item in Model)
            {

                <a href="#" class="list-group-item list-group-item-action">@item.Category.CategoryName</a>
            }


        </div>
    </div>

    <div class="col-md-9" >

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">

                    <div class="card mr-1 mb-1">
                        <img src="" class="card-img-top" alt="Resim Yok">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>

                            @* asp-route- ile taşımak istedigimiz veriyi taşıyabiliriz *@
                            <a asp-action="GetNewsDetail" asp-controller="News" asp-route-id="@item.Id" class="btn btn-primary float-right">Details</a>
                        </div>
                    </div>

                </div>

            }





        </div>
    </div>


    @*<a class="btn btn-danger btn-outline" href="/News/DeleteNews?id=@item.Id"> </a>*@


